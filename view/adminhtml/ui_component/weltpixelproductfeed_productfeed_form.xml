<?xml version="1.0" encoding="UTF-8"?>
<form xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Ui:etc/ui_configuration.xsd">
    <argument name="data" xsi:type="array">
        <item name="js_config" xsi:type="array">
            <item name="provider" xsi:type="string">weltpixelproductfeed_productfeed_form.productfeed_form_data_source</item>
            <item name="deps" xsi:type="string">weltpixelproductfeed_productfeed_form.productfeed_form_data_source</item>
        </item>
        <item name="label" xsi:type="string" translate="true">Product Feed Information</item>
        <item name="config" xsi:type="array">
            <item name="dataScope" xsi:type="string">data</item>
            <item name="namespace" xsi:type="string">weltpixelproductfeed_productfeed_form</item>
        </item>
        <item name="template" xsi:type="string">templates/form/collapsible</item>
        <item name="buttons" xsi:type="array">
            <item name="back" xsi:type="string">WeltPixel\ProductFeed\Block\Adminhtml\ProductFeed\Edit\BackButton</item>
            <item name="delete" xsi:type="string">WeltPixel\ProductFeed\Block\Adminhtml\ProductFeed\Edit\DeleteButton</item>
            <item name="reset" xsi:type="string">WeltPixel\ProductFeed\Block\Adminhtml\ProductFeed\Edit\ResetButton</item>
            <item name="duplicate" xsi:type="string">WeltPixel\ProductFeed\Block\Adminhtml\ProductFeed\Edit\DuplicateButton</item>
            <item name="generate" xsi:type="string">WeltPixel\ProductFeed\Block\Adminhtml\ProductFeed\Edit\GenerateFeedButton</item>
            <item name="save" xsi:type="string">WeltPixel\ProductFeed\Block\Adminhtml\ProductFeed\Edit\SaveButton</item>
            <item name="save_and_continue" xsi:type="string">WeltPixel\ProductFeed\Block\Adminhtml\ProductFeed\Edit\SaveAndContinueButton</item>
        </item>
    </argument>
    <dataSource name="productfeed_form_data_source">
        <argument name="dataProvider" xsi:type="configurableObject">
            <argument name="class" xsi:type="string">WeltPixel\ProductFeed\Model\ProductFeed\DataProvider</argument>
            <argument name="name" xsi:type="string">productfeed_form_data_source</argument>
            <argument name="primaryFieldName" xsi:type="string">id</argument>
            <argument name="requestFieldName" xsi:type="string">id</argument>
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="submit_url" xsi:type="url" path="weltpixelproductfeed/productfeed/save"/>
                </item>
            </argument>
        </argument>
        <argument name="data" xsi:type="array">
            <item name="js_config" xsi:type="array">
                <item name="component" xsi:type="string">Magento_Ui/js/form/provider</item>
            </item>
        </argument>
    </dataSource>
    <fieldset name="general">
        <argument name="data" xsi:type="array">
            <item name="config" xsi:type="array">
                <item name="label" xsi:type="string">General</item>
                <item name="collapsible" xsi:type="boolean">true</item>
                <item name="opened" xsi:type="boolean">true</item>
                <item name="sortOrder" xsi:type="number">0</item>
            </item>
        </argument>
        <field name="id">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="visible" xsi:type="boolean">false</item>
                    <item name="dataType" xsi:type="string">text</item>
                    <item name="formElement" xsi:type="string">input</item>
                    <item name="source" xsi:type="string">productfeed</item>
                    <item name="dataScope" xsi:type="string">id</item>
                </item>
            </argument>
        </field>
        <field name="template_type">
            <argument name="data" xsi:type="array">
                <item name="options" xsi:type="object">WeltPixel\ProductFeed\Model\ProductFeed\Attribute\Source\TemplateType</item>
                <item name="config" xsi:type="array">
                    <item name="dataType" xsi:type="string">string</item>
                    <item name="label" xsi:type="string" translate="true">Template Type</item>
                    <item name="formElement" xsi:type="string">select</item>
                    <item name="source" xsi:type="string">productfeed</item>
                    <item name="sortOrder" xsi:type="number">5</item>
                    <item name="dataScope" xsi:type="string">template_type</item>
                    <item name="validation" xsi:type="array">
                        <item name="required-entry" xsi:type="boolean">true</item>
                    </item>
                    <item name="notice" xsi:type="string" translate="true">
                        <![CDATA[
                       Choose a feed generation template. This should match the platform you're going to be generating your feed for. For example, if you're generating a Google Product Feed, choose Google as the template type.
                        ]]>
                    </item>
                </item>
            </argument>
        </field>
        <field name="name">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="dataType" xsi:type="string">text</item>
                    <item name="label" xsi:type="string" translate="true">Feed Name</item>
                    <item name="formElement" xsi:type="string">input</item>
                    <item name="source" xsi:type="string">productfeed</item>
                    <item name="sortOrder" xsi:type="number">10</item>
                    <item name="dataScope" xsi:type="string">name</item>
                    <item name="validation" xsi:type="array">
                        <item name="required-entry" xsi:type="boolean">true</item>
                    </item>
                </item>
            </argument>
        </field>
        <field name="file_name">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="dataType" xsi:type="string">text</item>
                    <item name="label" xsi:type="string" translate="true">File Name</item>
                    <item name="formElement" xsi:type="string">input</item>
                    <item name="source" xsi:type="string">productfeed</item>
                    <item name="sortOrder" xsi:type="number">20</item>
                    <item name="dataScope" xsi:type="string">file_name</item>
                    <item name="validation" xsi:type="array">
                        <item name="required-entry" xsi:type="boolean">true</item>
                    </item>
                </item>
            </argument>
        </field>
        <field name="file_type">
            <argument name="data" xsi:type="array">
                <item name="options" xsi:type="object">WeltPixel\ProductFeed\Model\ProductFeed\Attribute\Source\FileType</item>
                <item name="config" xsi:type="array">
                    <item name="dataType" xsi:type="string">string</item>
                    <item name="label" xsi:type="string" translate="true">File Type</item>
                    <item name="formElement" xsi:type="string">select</item>
                    <item name="source" xsi:type="string">productfeed</item>
                    <item name="sortOrder" xsi:type="number">30</item>
                    <item name="dataScope" xsi:type="string">file_type</item>
                    <item name="validation" xsi:type="array">
                        <item name="required-entry" xsi:type="boolean">true</item>
                    </item>
                </item>
            </argument>
        </field>
        <field name="storeviews">
            <argument name="data" xsi:type="array">
                <item name="options" xsi:type="object">Magento\Store\Ui\Component\Listing\Column\Store\Options</item>
                <item name="config" xsi:type="array">
                    <item name="dataType" xsi:type="string">int</item>
                    <item name="label" xsi:type="string" translate="true">Store View</item>
                    <item name="source" xsi:type="string">productfeed</item>
                    <item name="formElement" xsi:type="string">select</item>
                    <item name="dataScope" xsi:type="string">store_id</item>
                    <item name="sortOrder" xsi:type="number">40</item>
                    <item name="default" xsi:type="string">0</item>
                    <item name="validation" xsi:type="array">
                        <item name="required-entry" xsi:type="boolean">true</item>
                    </item>
                </item>
            </argument>
        </field>
        <field name="status">
            <argument name="data" xsi:type="array">
                <item name="options" xsi:type="object">WeltPixel\ProductFeed\Model\ProductFeed\Attribute\Source\Status</item>
                <item name="config" xsi:type="array">
                    <item name="dataType" xsi:type="string">int</item>
                    <item name="label" xsi:type="string" translate="true">Status</item>
                    <item name="formElement" xsi:type="string">select</item>
                    <item name="source" xsi:type="string">productfeed</item>
                    <item name="sortOrder" xsi:type="number">50</item>
                    <item name="dataScope" xsi:type="string">status</item>
                    <item name="default" xsi:type="string">1</item>
                    <item name="validation" xsi:type="array">
                        <item name="required-entry" xsi:type="boolean">true</item>
                    </item>
                </item>
            </argument>
        </field>
        <field name="exclude_disabled_products">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="dataType" xsi:type="string">boolean</item>
                    <item name="label" xsi:type="string" translate="true">Exclude Disabled Products</item>
                    <item name="source" xsi:type="string">productfeed</item>
                    <item name="formElement" xsi:type="string">checkbox</item>
                    <item name="prefer" xsi:type="string">toggle</item>
                    <item name="dataScope" xsi:type="string">exclude_disabled_products</item>
                    <item name="sortOrder" xsi:type="number">60</item>
                    <item name="valueMap" xsi:type="array">
                        <item name="true" xsi:type="string">1</item>
                        <item name="false" xsi:type="string">0</item>
                    </item>
                    <item name="default" xsi:type="string">0</item>
                </item>
            </argument>
        </field>
        <field name="exclude_out_of_stock_products">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="dataType" xsi:type="string">boolean</item>
                    <item name="label" xsi:type="string" translate="true">Exclude Out of Stock Products</item>
                    <item name="source" xsi:type="string">productfeed</item>
                    <item name="formElement" xsi:type="string">checkbox</item>
                    <item name="prefer" xsi:type="string">toggle</item>
                    <item name="dataScope" xsi:type="string">exclude_out_of_stock_products</item>
                    <item name="sortOrder" xsi:type="number">70</item>
                    <item name="valueMap" xsi:type="array">
                        <item name="true" xsi:type="string">1</item>
                        <item name="false" xsi:type="string">0</item>
                    </item>
                    <item name="default" xsi:type="string">0</item>
                </item>
            </argument>
        </field>
        <field name="exclude_not_visible_products">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="dataType" xsi:type="string">boolean</item>
                    <item name="label" xsi:type="string" translate="true">Exclude Not Visible Products</item>
                    <item name="source" xsi:type="string">productfeed</item>
                    <item name="formElement" xsi:type="string">checkbox</item>
                    <item name="prefer" xsi:type="string">toggle</item>
                    <item name="dataScope" xsi:type="string">exclude_not_visible_products</item>
                    <item name="sortOrder" xsi:type="number">80</item>
                    <item name="valueMap" xsi:type="array">
                        <item name="true" xsi:type="string">1</item>
                        <item name="false" xsi:type="string">0</item>
                    </item>
                    <item name="default" xsi:type="string">0</item>
                </item>
            </argument>
        </field>
    </fieldset>
    <fieldset name="content">
        <argument name="data" xsi:type="array">
            <item name="config" xsi:type="array">
                <item name="label" xsi:type="string">Feed Mappings</item>
                <item name="collapsible" xsi:type="boolean">true</item>
                <item name="opened" xsi:type="boolean">true</item>
                <item name="sortOrder" xsi:type="number">10</item>
            </item>
        </argument>
        <field name="content_mappings">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="dataType" xsi:type="string">text</item>
                    <item name="visible" xsi:type="boolean">false</item>
                    <item name="label" xsi:type="string" translate="true">Content Mappings</item>
                    <item name="formElement" xsi:type="string">input</item>
                    <item name="source" xsi:type="string">productfeed</item>
                    <item name="sortOrder" xsi:type="number">10</item>
                    <item name="dataScope" xsi:type="string">content_mappings</item>
                </item>
            </argument>
        </field>
        <container name="weltpixel_productfeed_edit_tab_contentmapping" >
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="sortOrder" xsi:type="number">30</item>
                </item>
            </argument>
            <htmlContent name="weltpixel_productfeed_edit_tab_contentmapping">
                <argument name="block" xsi:type="object">WeltPixel\ProductFeed\Block\Adminhtml\ProductFeed\Edit\Tab\Contentmapping</argument>
                <argument name="name" xsi:type="string">weltpixel_productfeed_edit_tab_contentmapping</argument>
            </htmlContent>
        </container>
    </fieldset>
    <fieldset name="conditions">
        <argument name="data" xsi:type="array">
            <item name="config" xsi:type="array">
                <item name="label" xsi:type="string" translate="true">Conditions</item>
                <item name="collapsible" xsi:type="boolean">true</item>
                <item name="opened" xsi:type="boolean">true</item>
                <item name="sortOrder" xsi:type="number">20</item>
            </item>
        </argument>
        <container name="weltpixel_productfeed_edit_tab_conditions" >
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="sortOrder" xsi:type="number">10</item>
                </item>
            </argument>
            <htmlContent name="weltpixel_productfeed_edit_tab_conditions">
                <argument name="block" xsi:type="object">WeltPixel\ProductFeed\Block\Adminhtml\ProductFeed\Edit\Tab\Conditions</argument>
                <argument name="name" xsi:type="string">weltpixel_productfeed_edit_tab</argument>
            </htmlContent>
        </container>
    </fieldset>
    <fieldset name="schedule">
        <argument name="data" xsi:type="array">
            <item name="config" xsi:type="array">
                <item name="label" xsi:type="string" translate="true">Schedule</item>
                <item name="collapsible" xsi:type="boolean">true</item>
                <item name="opened" xsi:type="boolean">true</item>
                <item name="sortOrder" xsi:type="number">30</item>
            </item>
        </argument>
        <field name="feed_execution_mode">
            <argument name="data" xsi:type="array">
                <item name="options" xsi:type="object">WeltPixel\ProductFeed\Model\ProductFeed\Attribute\Source\FeedExecutionMode</item>
                <item name="config" xsi:type="array">
                    <item name="dataType" xsi:type="string">string</item>
                    <item name="formElement" xsi:type="string">select</item>
                    <item name="source" xsi:type="string">productfeed</item>
                    <item name="label" xsi:type="string" translate="true">Feed Execution Mode</item>
                    <item name="sortOrder" xsi:type="number">10</item>
                    <item name="dataScope" xsi:type="string">feed_execution_mode</item>
                    <item name="notice" xsi:type="string" translate="true">Choose whether to generate the feed manually or via a scheduled cron job.</item>
                </item>
            </argument>
            <settings>
                <switcherConfig>
                    <rules>
                        <rule name="0">
                            <value>manual</value>
                            <actions>
                                <action name="0">
                                    <target>weltpixelproductfeed_productfeed_form.weltpixelproductfeed_productfeed_form.schedule.feed_cron_day</target>
                                    <callback>hide</callback>
                                </action>
                                <action name="1">
                                    <target>weltpixelproductfeed_productfeed_form.weltpixelproductfeed_productfeed_form.schedule.feed_cron_time</target>
                                    <callback>hide</callback>
                                </action>
                            </actions>
                        </rule>
                        <rule name="1">
                            <value>schedule</value>
                            <actions>
                                <action name="0">
                                    <target>weltpixelproductfeed_productfeed_form.weltpixelproductfeed_productfeed_form.schedule.feed_cron_day</target>
                                    <callback>show</callback>
                                </action>
                                <action name="1">
                                    <target>weltpixelproductfeed_productfeed_form.weltpixelproductfeed_productfeed_form.schedule.feed_cron_time</target>
                                    <callback>show</callback>
                                </action>
                            </actions>
                        </rule>
                    </rules>
                    <enabled>true</enabled>
                </switcherConfig>
            </settings>
        </field>
        <field name="feed_cron_day">
            <argument name="data" xsi:type="array">
                <item name="options" xsi:type="object">WeltPixel\ProductFeed\Model\ProductFeed\Attribute\Source\FeedCronDay</item>
                <item name="config" xsi:type="array">
                    <item name="dataType" xsi:type="string">string</item>
                    <item name="formElement" xsi:type="string">multiselect</item>
                    <item name="source" xsi:type="string">productfeed</item>
                    <item name="label" xsi:type="string" translate="true">Day</item>
                    <item name="sortOrder" xsi:type="number">20</item>
                    <item name="dataScope" xsi:type="string">feed_cron_day</item>
                </item>
            </argument>
        </field>
        <field name="feed_cron_time">
            <argument name="data" xsi:type="array">
                <item name="options" xsi:type="object">WeltPixel\ProductFeed\Model\ProductFeed\Attribute\Source\FeedCronTime</item>
                <item name="config" xsi:type="array">
                    <item name="dataType" xsi:type="string">string</item>
                    <item name="formElement" xsi:type="string">multiselect</item>
                    <item name="source" xsi:type="string">productfeed</item>
                    <item name="label" xsi:type="string" translate="true">Time</item>
                    <item name="sortOrder" xsi:type="number">30</item>
                    <item name="dataScope" xsi:type="string">feed_cron_time</item>
                </item>
            </argument>
        </field>
        <container name="generate_feed_button_container">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="sortOrder" xsi:type="number">40</item>
                </item>
            </argument>
            <button name="generate_scheduled">
                <argument name="data" xsi:type="array">
                    <item name="config" xsi:type="array">
                        <item name="buttonClasses" xsi:type="string">action-secondary</item>
                        <item name="component" xsi:type="string">WeltPixel_ProductFeed/js/form/button/generate</item>
                        <item name="template" xsi:type="string">WeltPixel_ProductFeed/form/element/generate-button</item>
                        <item name="title" xsi:type="string" translate="true">Generate Feed Now</item>
                        <item name="sortOrder" xsi:type="number">10</item>
                        <item name="visible" xsi:type="boolean">false</item>
                    </item>
                </argument>
            </button>
        </container>
    </fieldset>
    <fieldset name="analyitcs">
        <argument name="data" xsi:type="array">
            <item name="config" xsi:type="array">
                <item name="label" xsi:type="string" translate="true">Analytics</item>
                <item name="collapsible" xsi:type="boolean">true</item>
                <item name="opened" xsi:type="boolean">true</item>
                <item name="sortOrder" xsi:type="number">40</item>
            </item>
        </argument>
        <field name="feed_utm_source">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="dataType" xsi:type="string">text</item>
                    <item name="label" xsi:type="string" translate="true">Campaign Source</item>
                    <item name="formElement" xsi:type="string">input</item>
                    <item name="template" xsi:type="string">WeltPixel_ProductFeed/form/field</item>
                    <item name="source" xsi:type="string">productfeed</item>
                    <item name="sortOrder" xsi:type="number">10</item>
                    <item name="dataScope" xsi:type="string">feed_utm_source</item>
                    <item name="notice" xsi:type="string" translate="true">
                        <![CDATA[
                       <b>Required</b> for tracking. Used to identify the traffic source such as a search engine or newsletter. Example: google
                        ]]>
                    </item>
                </item>
            </argument>
        </field>
        <field name="feed_utm_medium">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="dataType" xsi:type="string">text</item>
                    <item name="label" xsi:type="string" translate="true">Campaign Medium</item>
                    <item name="formElement" xsi:type="string">input</item>
                    <item name="template" xsi:type="string">WeltPixel_ProductFeed/form/field</item>
                    <item name="source" xsi:type="string">productfeed</item>
                    <item name="sortOrder" xsi:type="number">20</item>
                    <item name="dataScope" xsi:type="string">feed_utm_medium</item>
                    <item name="notice" xsi:type="string" translate="true">
                        <![CDATA[
                        <b>Required</b> for tracking. Used to identify the traffic medium such as email. Example: email
                        ]]>
                    </item>
                </item>
            </argument>
        </field>
        <field name="feed_utm_term">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="dataType" xsi:type="string">text</item>
                    <item name="label" xsi:type="string" translate="true">Campaign Term</item>
                    <item name="formElement" xsi:type="string">input</item>
                    <item name="source" xsi:type="string">productfeed</item>
                    <item name="sortOrder" xsi:type="number">30</item>
                    <item name="dataScope" xsi:type="string">feed_utm_term</item>
                    <item name="notice" xsi:type="string" translate="true">Used for identifying keywords. Example: gym+bags</item>
                </item>
            </argument>
        </field>
        <field name="feed_utm_content">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="dataType" xsi:type="string">text</item>
                    <item name="label" xsi:type="string" translate="true">Campaign Content</item>
                    <item name="formElement" xsi:type="string">input</item>
                    <item name="source" xsi:type="string">productfeed</item>
                    <item name="sortOrder" xsi:type="number">40</item>
                    <item name="dataScope" xsi:type="string">feed_utm_content</item>
                    <item name="notice" xsi:type="string" translate="true">Used for content-targeted ads or A/B testing and differentiates between links that point to the same URL. Example: textlink</item>
                </item>
            </argument>
        </field>
        <field name="feed_utm_campaign">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="dataType" xsi:type="string">text</item>
                    <item name="label" xsi:type="string" translate="true">Campaign Name</item>
                    <item name="formElement" xsi:type="string">input</item>
                    <item name="source" xsi:type="string">productfeed</item>
                    <item name="sortOrder" xsi:type="number">50</item>
                    <item name="dataScope" xsi:type="string">feed_utm_campaign</item>
                    <item name="notice" xsi:type="string" translate="true">Used to identify a campaign or promo. Example: black_friday</item>
                </item>
            </argument>
        </field>
    </fieldset>
</form>
